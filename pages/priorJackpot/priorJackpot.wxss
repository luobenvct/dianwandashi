/* pages/priorJackpot/priorJackpot.wxss */
page {
  background: #3c6af6;
}

.outContainer {
  background: #3c6af6;
  padding: 40rpx 30rpx;
}

.jackPotScore {
  width: 100%;
  height: 104rpx;
  line-height: 104rpx;
  padding: 0 16rpx;
  box-sizing: border-box;
  background: #2e3a83;
  border-radius: 4rpx;
  color: #fff;
  margin-bottom: 40rpx;
  font-size: 24rpx;
}

.jackPotScore text {
  font-size: 48rpx;
  color: #f85844;
  font-weight: 600;
}

.jackPotScore .unit {
  font-size: 32rpx;
  color: #f85844;
  margin-right: 8rpx;
}

.rank .title {
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.rank .title text:first-child {
  padding: 6rpx 16rpx;
  height: 48rpx;
  line-height: 48rpx;
  color: #fff;
  background: #2e3a83;
  border-radius: 12rpx;
}

.rankContentOut {
  margin-top: 20rpx;
  padding: 32rpx;
  box-sizing: border-box;
  background: #2e3a83;
  border-radius: 12rpx;
}

.rankContent .li:first-child .part1 {
  color: #ff4600;
}

.rankContent .li:nth-child(2) .part1 {
  color: #ff6502;
}

.rankContent .li:nth-child(3) .part1 {
  color: #ffa300;
}

.rankContent .li:first-child .part3 {
  color: #ff4600;
}

.rankContent .li:nth-child(2) .part3 {
  color: #ff6502;
}

.rankContent .li:nth-child(3) .part3 {
  color: #ffa300;
}

.rankContent .li {
  padding-bottom: 6rpx;
  margin-bottom: 6rpx;
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  color: #fff;
}

.rankContent .li:last-child {
  border: none;
}

.rankContent .li .part1 {
  width: 5%;
  font-size: 32rpx;
}

.rankContent .li .part2 {
  width: 25%;
}

.rankContent .li .part2 {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.rankContent .li .part2 image {
  width: 100rpx;
  height: 100rpx;
}

.rankContent .li .part2 .headBg {
  position: absolute;
}

.rankContent .li .part3 {
  width: 15%;
  margin-right: 31%;
  font-size: 28rpx;
}

.rankContent .li .part4 {
  width: 24%;
  font-size: 24rpx;
  color: #ffb608;
  text-align: center;
}

.rankContent .li .part3 text {
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.rankContent .li .part3 image {
  display: block;
  width: 44rpx;
  height: 28rpx;
  margin-top: 8rpx;
}

.rankContent .li .part4 image {
  display: block;
  width: 36rpx;
  height: 30rpx;
  margin: 0 auto 8rpx;
}

.resultContent {
  background: #35418e;
  border: 2rpx solid #37459b;
  border-radius: 6rpx;
  padding: 28rpx 40rpx;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #fe7606;
}

.ticket {
  padding-bottom: 10px;
  margin-bottom: 10px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}

.activyRules {
  padding: 16px;
  box-sizing: border-box;
}
